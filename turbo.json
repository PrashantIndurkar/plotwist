{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [
    ".env.local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "web#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_MEASUREMENT_ID"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_TMDB_API_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY"
  ],
  "globalDependencies": [
    "tsconfig.json"
  ]
}