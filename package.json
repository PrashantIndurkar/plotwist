{
  "name": "plotwist",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:typescript": "turbo build --filter=@plotwist/typescript-config",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@plotwist/eslint-config": "workspace:*",
    "@plotwist/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
